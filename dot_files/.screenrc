startup_message off        # disable startup message
termcapinfo xterm* ti@:te@ # enable mause in terminal
altscreen on               # create altscreen for programs like vim/less etc.
term xterm-256color        # enable extended coloring
defscrollback 10000        # size of scrollback
defbce "on"                # Select background color erase
autodetach on              # De-atach session when it disconnect

# Navigation like in VIM
bind j focus down
bind k focus up
bind h focus left
bind l focus right

